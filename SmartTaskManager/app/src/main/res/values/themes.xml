<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.SmartTaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Default background color -->
        <item name="android:windowBackground">@color/backgroundColor</item>

        <!-- Status bar and nav bar -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@android:color/white</item>

        <!-- Use custom toolbar style -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!-- Custom Toolbar style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

</resources>
